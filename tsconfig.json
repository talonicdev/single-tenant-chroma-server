{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noUncheckedIndexedAccess": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist/"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}